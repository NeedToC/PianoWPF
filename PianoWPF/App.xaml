<Application x:Class="PianoWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PianoWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="KeyTemplate.xaml"/>
                <ResourceDictionary Source="KeySharpRightTemplate.xaml"/>
                <ResourceDictionary Source="KeySharpLeftTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type local:MainViewViewModel}">
                <local:MainView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>

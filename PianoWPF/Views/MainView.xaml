<UserControl x:Class="PianoWPF.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PianoWPF"
             mc:Ignorable="d" 
             d:DesignHeight="510"
             d:DesignWidth="850"
             Padding="10">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0 0"
                                 EndPoint="1 2">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Offset="0.1" Color="DarkSlateGray"/>
                    <GradientStop Offset="1" Color="DarkSlateBlue"/>
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Content="C4"
                    Command="{Binding CmdKeyC4}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="1"
                    Content="D4"
                    Command="{Binding CmdKeyD4}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="2"
                    Content="E4"
                    Command="{Binding CmdKeyE4}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="3"
                    Content="F4"
                    Command="{Binding CmdKeyF4}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="4"
                    Content="G4"
                    Command="{Binding CmdKeyG4}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="5"
                    Content="A4"
                    Command="{Binding CmdKeyA4}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="6"
                    Content="B4"
                    Command="{Binding CmdKeyB4}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="7"
                    Content="C5"
                    Command="{Binding CmdKeyC5}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="8"
                    Content="D5"
                    Command="{Binding CmdKeyD5}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="9"
                    Content="E5"
                    Command="{Binding CmdKeyE5}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="10"
                    Content="F5"
                    Command="{Binding CmdKeyF5}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="11"
                    Content="G5"
                    Command="{Binding CmdKeyG5}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="12"
                    Content="A5"
                    Command="{Binding CmdKeyA5}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="13"
                    Content="B5"
                    Command="{Binding CmdKeyB5}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="14"
                    Content="C6"
                    Command="{Binding CmdKeyC6}"
                    Style="{StaticResource KeyTheme}"/>
            <Button Grid.Column="15"
                    Content="D6"
                    Command="{Binding CmdKeyD6}"
                    Style="{StaticResource KeyTheme}"/>            
            
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Content="C#"
                    Command="{Binding CmdKeyC4Sharp}"
                    Style="{StaticResource KeySharpRightTheme}"/>
            <Button Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Content="D#"
                    Command="{Binding CmdKeyD4Sharp}"
                    Style="{StaticResource KeySharpLeftTheme}"/>

            <Button Grid.Column="6"
                    Grid.ColumnSpan="3"
                    Content="F#"
                    Command="{Binding CmdKeyF4Sharp}"
                    Style="{StaticResource KeySharpRightTheme}"/>
            <Button Grid.Column="9"
                    Grid.ColumnSpan="3"
                    Content="G#"
                    Command="{Binding CmdKeyG4Sharp}"
                    Style="{StaticResource KeySharpLeftTheme}"/>
            <Button Grid.Column="10"
                    Grid.ColumnSpan="3"
                    Content="A#"
                    Command="{Binding CmdKeyA4Sharp}"
                    Style="{StaticResource KeySharpRightTheme}"/>
            
            <Button Grid.Column="14"
                    Grid.ColumnSpan="3"
                    Content="C#"
                    Command="{Binding CmdKeyC5Sharp}"
                    Style="{StaticResource KeySharpRightTheme}"/>
            <Button Grid.Column="17"
                    Grid.ColumnSpan="3"
                    Content="D#"
                    Command="{Binding CmdKeyD5Sharp}"
                    Style="{StaticResource KeySharpLeftTheme}"/>
            
            <Button Grid.Column="20"
                    Grid.ColumnSpan="3"
                    Content="F#"
                    Command="{Binding CmdKeyF5Sharp}"
                    Style="{StaticResource KeySharpRightTheme}"/>
            <Button Grid.Column="23"
                    Grid.ColumnSpan="3"
                    Content="G#"
                    Command="{Binding CmdKeyG5Sharp}"
                    Style="{StaticResource KeySharpLeftTheme}"/>
            <Button Grid.Column="24"
                    Grid.ColumnSpan="3"
                    Content="A#"
                    Command="{Binding CmdKeyA5Sharp}"
                    Style="{StaticResource KeySharpRightTheme}"/>
            
            <Button Grid.Column="28"
                    Grid.ColumnSpan="3"
                    Content="C#"
                    Command="{Binding CmdKeyC6Sharp}"
                    Style="{StaticResource KeySharpRightTheme}"/>
            
        </Grid>

        <StackPanel Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Duration:"
                           VerticalAlignment="Center"
                           Foreground="Silver"/>
                <TextBox VerticalAlignment="Center"
                         HorizontalContentAlignment="Center"
                         Width="100"
                         Margin="3"
                         Text="{Binding Duration}"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
    
</UserControl>
